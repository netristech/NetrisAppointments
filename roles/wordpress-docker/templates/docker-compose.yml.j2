version: "3"

services:
   db_node_domain:
     image: mysql:5.7
     volumes:
        - db_data:/var/lib/mysql
     restart: always
     environment:
        MYSQL_ROOT_PASSWORD: "{{ na_root_pw }}"
        MYSQL_DATABASE: wordpress
        MYSQL_USER: root
        MYSQL_PASSWORD: "{{ na_root_pw }}"
     container_name: wp_test_db

   wordpress:
     depends_on:
        - db_node_domain
     image: wordpress:latest
     expose:
        - 80
     restart: always
     environment:
        VIRTUAL_HOST: "{{ inventory_hostname }}"
        LETSENCRYPT_HOST: "{{ inventory_hostname }}"
        LETSENCRYPT_EMAIL: "{{ letsencrypt_email }}"
        WORDPRESS_DB_HOST: db_node_domain:3306
        WORDPRESS_DB_USER: root
        WORDPRESS_DB_PASSWORD: "{{ na_root_pw }}"
     container_name: wp_test
volumes:
  db_data:

networks:
  default:
    external:
      name: nginx-proxy
